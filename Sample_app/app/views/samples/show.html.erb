<div class="container">
  <div class="row">
    <div class="col-md-3">

      <h1>投稿フォーム</h1>
        <%= form_with model: @samples, local: true do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>body</h4>
        <%= f.text_area :body %>
        <%= f.submit "投稿" %>
          <% end %>
    </div>
    <div class="col-md-8" "offset-1">
<h1>投稿一覧</h1>
<table class= "table table-dark">
  <thead>
    <tr>
      <th>title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <thead>
    <tr>
      <td><%=@sample.title %></td>
      <td><%=@sample.body %></td>
    </tr>
  </thead>
</table>
      <%= link_to "一覧へ", samples_path, class:"btn btn-success" %>
    </div>
  </div>
</div>

